{
  "name": "more-recipes-personal",
  "version": "1.0.0",
  "description": "A Recipe Management Application written in Javscript (ES6)",
  "author": "Iveren Shaguy",
  "license": "ISC",
  "main": "server/build/bin/www.js",
  "scripts": {
    "start": "npm-run-all start:server start:client",
    "build": "npm-run-all build:server build:client",
    "test": "npm-run-all test:server test:client",
    "start:server": "node ./server/build/bin/www.js",
    "start:server:dev": "nodemon ./server/build/bin/www.js",
    "start:client": "node client/scripts/start.js",
    "build:server": "cross-env NODE_ENV=development babel server/src -d server/build",
    "build:client": "node client/scripts/build.js",
    "test:server": "cross-env NODE_ENV=test nyc mocha server/tests/test.js --recursive --timeout 30000",
    "test:server:watch": "cross-env NODE_ENV=test nyc mocha server/tests/test.js --recursive --timeout 30000 --watch",
    "test:client": "node client/scripts/test.js --env=jsdom --coverage",
    "test:client:watch": "node client/scripts/test.js --env=jsdom",
    "pretest": "npm run lint",
    "prebuild:init": "cd server && mkdir build",
    "prebuild": "npm-run-all clean:server prebuild:init",
    "clean:server": "cd server && rm -rf build",
    "lint": "eslint **/*.js --fix",
    "coverage:server": "nyc report --reporter=text-lcov | coveralls",
    "analyze": "source-map-explorer client/build/static/js/main.*",
    "test:coverage": "node client/scripts/test.js -- --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom"
  },
  "dependencies": {
    "autoprefixer": "^7.2.2",
    "babel-cli": "^6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react-app": "^3.1.0",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "body-parser": "^1.18.2",
    "bootstrap": "4.0.0-beta",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.3.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "css-loader": "0.28.7",
    "del": "^3.0.0",
    "dotenv": "4.0.0",
    "env2": "^2.2.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "^1.1.5",
    "fs-extra": "^4.0.3",
    "global": "^4.3.2",
    "html-webpack-plugin": "^2.30.1",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "minimatch": "3.0.2",
    "mocha": "^3.5.3",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.1",
    "object-assign": "^4.1.1",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "popper.js": "^1.12.9",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.9",
    "promise": "^8.0.1",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dev-utils": "^4.2.1",
    "react-dom": "^16.2.0",
    "react-logger": "^1.1.0",
    "react-popper": "^0.7.4",
    "react-test-renderer": "^16.2.0",
    "react-transition-group": "^2.2.1",
    "reactstrap": "^5.0.0-alpha.4",
    "sass-loader": "^6.0.6",
    "selenium-standalone": "^6.12.0",
    "sequelize": "^4.20.1",
    "source-map-explorer": "^1.5.0",
    "style-loader": "^0.19.0",
    "supertest": "^3.0.0",
    "sw-precache-webpack-plugin": "^0.11.4",
    "url-loader": "^0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "^2.9.7",
    "webpack-manifest-plugin": "^1.3.2",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "chai-fs": "^2.0.0",
    "coveralls": "^2.13.3",
    "cross-env": "^5.1.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.40.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "eslint-watch": "^3.1.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-sourcemaps": "^2.6.1",
    "istanbul": "^0.4.5",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "node-sass-chokidar": "^0.0.3",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "require": ["babel-register"],
    "exclude": [
      "**/*.test.js",
      "**/__tests__/**",
      "**/node_modules/**",
      "nightwatch.conf.js",
      "gulpfile.babel.js",
      "client",
      "server/config",
      "server/coverage/**",
      "server/src/models/index.js",
      "server/tests/**",
      "server/test{,-*}.js"
    ],
    "reporter": ["lcov", "text"],
    "sourceMap": false,
    "instrument": false,
    "cache": true,
    "report-dir": "./server/coverage"
  },
  "jest": {
    "collectCoverageFrom": ["client/src/**/*.{js,jsx,mjs}"],
    "setupFiles": ["<rootDir>/config/polyfills.js"],
    "coveragePathIgnorePatterns": [
      "<rootDir>/nightwatch.conf.js",
      "<rootDir>/gulpfile.babel.js",
      "<rootDir>/node_modules/",
      "<rootDir>/client/src/index.js",
      "<rootDir>/client/src/registerServiceWorker.js",
      "<rootDir>/client/scripts",
      "<rootDir>/server/"
    ],
    "testMatch": [
      "<rootDir>/client/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/client/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": ["web.js", "mjs", "js", "json", "web.jsx", "jsx", "node"]
  }
}