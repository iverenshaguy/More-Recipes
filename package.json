{
  "name": "more-recipes-personal",
  "version": "1.0.0",
  "description": "A Recipe Management Application written in Javscript (ES6)",
  "author": "Iveren Shaguy",
  "license": "MIT",
  "engines": {
    "node": "8.2.1"
  },
  "main": "server/dist/bin/www.js",
  "directories": {
    "test": "test"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 70,
    "require": ["babel-register"],
    "exclude": [
      "coverage/**', 'test/**",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**",
      "**/node_modules/**",
      "config",
      "server/src/models/index.js"
    ],
    "reporter": ["lcov", "text"],
    "sourceMap": false,
    "instrument": false,
    "cache": true,
    "report-dir": "./coverage"
  },
  "scripts": {
    "start": "node ./server/dist/bin/www.js",
    "start:dev": "nodemon ./server/dist/bin/www.js",
    "test": "cross-env NODE_ENV=test nyc mocha test/test.js --recursive --timeout 30000",
    "pretest": "yarn run lint",
    "clean": "cd server && rm -rf dist",
    "prebuild:init": "cd server && mkdir dist",
    "prebuild": "npm-run-all clean prebuild:init",
    "build": "babel server/src -d server/dist",
    "lint": "eslint **/*.js --fix",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postinstall": "yarn run build && sequelize db:migrate"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "del": "^3.0.0",
    "dotenv": "^4.0.0",
    "env2": "^2.2.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "global": "^4.3.2",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "minimatch": "3.0.2",
    "mocha": "^3.5.3",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "npm-run-all": "^4.1.1",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.20.1",
    "sequelize-cli": "^3.1.0",
    "supertest": "^3.0.0"
  },
  "devDependencies": {
    "chai-fs": "^2.0.0",
    "coveralls": "^2.13.3",
    "cross-env": "^5.1.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "eslint-watch": "^3.1.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-sourcemaps": "^2.6.1",
    "istanbul": "^0.4.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0"
  }
}
